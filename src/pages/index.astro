
---
import Layout from "../layouts/Layout.astro";
import "../assets/iconfont.css";
import { Skill } from "../components/Skill";
import { Experience } from "../components/Experience";
import config from "../../meta.config";

const { useInfo, about, experience, skills } = config;

---

<Layout title="Welcome to Astro.">
  <div class="mt-6 max-w-screen-lg md:flex mx-auto shadow-xl">
    <div class="md:w-1/3 p-2 relative">
      <div class="md:fixed">
        <div class="md:block">
          <div class="flex justify-center">
            <img
              class="h-32 w-32 rounded-full mx-auto mx-4"
              src={useInfo.picture}
            />
          </div>
          <div class="mb-12 text-center mt-4 justify-center items-center">
            <h1 class="text-lg text-gray-800 font-bold">{useInfo.name}</h1>
            <div class="md:text-base text-gray-600">{useInfo.job}</div>
            <div class="md:text-base text-gray-600">{useInfo.jobOld}</div>
            <div class="text-gray-600 md:hidden mt-1">(wx: { useInfo.wx })</div>
          </div>
        </div>
        <div class="mx-4 my-4 hidden md:block">
          <div class="my-5 text-base text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-wechat"></span>
            </div>
            { useInfo.wx }
          </div>
          <div class="my-5 text-base text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-Phoneshouji"></span>
            </div>
            { useInfo.tel }
          </div>
          <div class="my-5 text-base text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-email"></span>
            </div>
            { useInfo.email }
          </div>
          <div class="my-5 text-base text-gray-600 flex">
            <div class="mr-2">
              <span class="iconfont icon-position"></span>
            </div>
            { useInfo.city }
          </div>
          <a
            href= "my-5 flex"
            target="_blank"
          >
            <div class="mr-2">
              <span class="iconfont icon-github"></span>
            </div>
            <span class="text-blue-500">GitHub</span>
          </a >
        </div>
      </div>
    </div>
    <div class="md:w-2/3 p-2 w-full">
      <div class="mx-4 mb-4">
        <h1 class="mb-2 text-xl text-gray-700 font-bold">个人评价</h1>
        <p class="text-sm">
          {
            about.map(item => item )
          }
        </p >
      </div>
      <div class="mx-4">
        <h1 class="mb-2 text-xl text-gray-700 font-bold">工作经历</h1>
        <ul>
          {
            experience.map( item => {
              return <Experience current={item} client:load />
            })
          
          }
        </ul>
      </div>
      <div class="mx-4">
        <h1 class="mb-2 text-xl text-gray-700 font-bold">Skill</h1>
        <ul>
          <li class="mb-4 flex flex-wrap">
            {
              skills.map((name) => {
                return <Skill name={name} client:load />;
              })
            }
          </li>
        </ul>
      </div>
    </div>
  </div>
</Layout>
